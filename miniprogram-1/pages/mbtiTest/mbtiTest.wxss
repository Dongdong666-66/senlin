.mbti-test-container {
  min-height: 100vh;
  background: #f7f7f7;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
}
.mbti-test-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 40rpx;
}
.mbti-test-progress {
  font-size: 34rpx;
  color: #888;
  margin-bottom: 28rpx;
}
.mbti-test-question {
  font-size: 40rpx;
  color: #222;
  margin-bottom: 60rpx;
  text-align: center;
  padding: 0 36rpx;
}
.mbti-test-options {
  width: 92vw;
  max-width: 540rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  margin-bottom: 48rpx;
}
.mbti-test-option {
  margin: 24rpx 0;
  width: 100%;
  font-size: 32rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 16rpx;
  border: 2rpx solid #e0e0e0;
  padding: 28rpx 0;
  font-weight: 500;
  transition: all 0.2s;
}
.mbti-test-option-active {
  color: #fff;
  background: #4CAF50;
  border-color: #4CAF50;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx #b6e3e0;
}
.mbti-test-next {
  width: 60vw;
  max-width: 320rpx;
  background: #222;
  color: #fff;
  border-radius: 24rpx;
  font-size: 36rpx;
  padding: 22rpx 0;
  border: none;
  margin-top: 18rpx;
}
.mbti-result-mask, .mbti-detail-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.35);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.mbti-result-modal, .mbti-detail-modal {
  background: #fff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx 40rpx 40rpx;
  min-width: 540rpx;
  box-shadow: 0 8rpx 32rpx #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.mbti-result-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 48rpx;
  color: #222;
}
.mbti-result-btns {
  display: flex;
  gap: 36rpx;
}
.mbti-result-btn {
  background: #222;
  color: #fff;
  border-radius: 24rpx;
  font-size: 36rpx;
  padding: 22rpx 48rpx;
  border: none;
}
.mbti-detail-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #222;
}
.mbti-detail-img {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}
.mbti-detail-desc {
  font-size: 32rpx;
  color: #444;
  margin-bottom: 18rpx;
  text-align: center;
}
.mbti-detail-feature {
  font-size: 30rpx;
  color: #888;
  margin-bottom: 32rpx;
  text-align: center;
}
.mbti-detail-close {
  background: #222;
  color: #fff;
  border-radius: 20rpx;
  font-size: 32rpx;
  padding: 16rpx 60rpx;
  border: none;
} 