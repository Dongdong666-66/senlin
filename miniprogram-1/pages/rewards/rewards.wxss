/* rewards page style */ 
.profile-page {
  background: #f7f7f7;
  min-height: 100vh;
  padding-bottom: 80rpx;
}
.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 0 32rpx 0;
  background: #fff;
}
.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #eee;
  margin-bottom: 18rpx;
}
.profile-nickname {
  font-size: 36rpx;
  color: #222;
  font-weight: bold;
}
.profile-login-btn {
  margin: 32rpx auto 0 auto;
  width: 80vw;
  max-width: 400rpx;
  background: #222;
  color: #fff;
  border-radius: 32rpx;
  font-size: 32rpx;
  padding: 22rpx 0;
  border: none;
  display: block;
}
.profile-list {
  margin: 48rpx 0 0 0;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx #eee;
  padding: 0 0 0 0;
}
.profile-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1px solid #f0f0f0;
}
.profile-item:last-child {
  border-bottom: none;
}
.profile-version {
  color: #888;
  font-size: 28rpx;
  margin-left: 16rpx;
} 