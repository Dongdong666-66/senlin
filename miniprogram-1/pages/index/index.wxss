/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  background: #f7f7f7;
  min-height: 100vh;
  padding-bottom: 120rpx;
}
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 32rpx 0 32rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #eee;
}
.setting-icon {
  color: #bdbdbd;
}
.progress-section,
.progress-bg,
.progress-ring,
.progress-circle,
.info-cards,
.calendar-section,
.meal-card {
  display: none !important;
}
.mbti-section {
  margin-top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.mbti-label {
  font-size: 36rpx;
  color: #333;
  margin-right: 16rpx;
}
.mbti-value {
  font-size: 40rpx;
  color: #4CAF50;
  font-weight: bold;
}
.mbti-btns-main {
  margin: 120rpx 0 32rpx 0;
  display: flex;
  justify-content: center;
  gap: 48rpx;
}
.mbti-btn-main {
  background: #e6f7d9;
  color: #4CAF50;
  border-radius: 32rpx;
  font-size: 40rpx;
  padding: 32rpx 80rpx;
  border: none;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx #d0eac0;
}
.emotion-card {
  margin: 48rpx 32rpx 0 32rpx;
  background: #fff;
  border-radius: 36rpx;
  box-shadow: 0 4rpx 24rpx #e0e0e0;
  padding: 32rpx 24rpx 24rpx 24rpx;
}
.emotion-card-wide {
  width: 92vw;
  max-width: 700rpx;
  margin-left: auto;
  margin-right: auto;
}
.emotion-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
/* 去除表情选择相关样式 */
.emotion-select, .emotion-option, .emotion-img, .emotion-label { display: none !important; }
.emotion-title {
  height: 36rpx;
  background: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
  display: flex;
  align-items: center;
}
.emotion-date {
  height: 36rpx;
  background: #f5f5f5;
  border-radius: 18rpx;
  font-size: 26rpx;
  color: #888;
  display: flex;
  align-items: center;
  padding: 0 16rpx;
}
.emotion-days {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.emotion-day {
  width: 64rpx;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 6rpx;
  box-shadow: 0 2rpx 8rpx #f0f0f0;
}
.emotion-day-num {
  font-size: 28rpx;
  color: #bdbdbd;
  font-weight: bold;
}
.emotion-day-week {
  font-size: 24rpx;
  color: #bdbdbd;
  margin-top: 4rpx;
}
.emotion-day-selected {
  background: #b6e3e0;
}
.mbti-btn-dark {
  background: #333333 !important;
  color: #fff !important;
  box-shadow: 0 8rpx 24rpx #bbb !important;
}
.today-emotion-title {
  margin-top: 40rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}
.mbti-decor {
  width: 80vw;
  max-width: 600rpx;
  height: 80rpx;
  margin: 32rpx auto 0 auto;
  background: linear-gradient(90deg, #f5f7fa 0%, #e9f0ec 100%);
  border-radius: 32rpx;
  box-shadow: 0 4rpx 24rpx #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 确保页面最下方无灰色圆圈和绿色勾勾 */
.emotion-day-img {
  width: 48rpx;
  height: 48rpx;
  display: block;
  margin: 0 auto 0 auto;
}
