.mbti-list-container {
  padding: 24rpx;
  background: #f7f7f7;
  min-height: 100vh;
}

.mbti-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.mbti-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.mbti-card:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.mbti-card-img {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 24rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
}

.mbti-card-info {
  text-align: center;
  width: 100%;
}

.mbti-card-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.mbti-card-name {
  font-size: 28rpx;
  color: #666;
  margin-top: 4rpx;
}

.mbti-img {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
}

.mbti-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
}

.mbti-name {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.mbti-desc {
  font-size: 22rpx;
  color: #888;
  text-align: center;
  min-height: 48rpx;
  margin-top: 2rpx;
} 